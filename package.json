{
  "dependencies": {
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@web/dev-server": "^0.1.35",
    "@web/dev-server-rollup": "^0.3.21",
    "browserslist": "^4.21.5",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-compat": "^4.1.2",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^2.3.0",
    "eslint-plugin-wc": "^1.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "rollup-plugin-scss-lit": "^1.1.4",
    "typescript": "^4.9.5",
    "typescript-lit-html-plugin": "^0.9.0",
    "wireit": "^0.9.5"
  },
  "scripts": {
    "copy": "wireit",
    "dev": "concurrently \"npm run copy --watch\" \"npm run ts --watch\" \"npm run start\" ",
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --ignore-path .gitignore \"**/*.{js,mjs,ts,html}\" --fix",
    "format:prettier": "prettier --ignore-path .gitignore --write .",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:eslint": "eslint --ignore-path .gitignore \"**/*.{js,mjs,ts,html}\"",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "prepare": "husky install",
    "start": "wds",
    "test": "wtr",
    "ts": "wireit"
  },
  "wireit": {
    "copy": {
      "command": "copyfiles -u 1 'src/**/*.css' 'src/**/*.scss' src/index.html lib/",
      "files": [
        "src/**/*.css",
        "src/**/*.scss",
        "src/index.html"
      ],
      "output": [
        "lib/**/*.css",
        "lib/**/*.scss",
        "lib/index.html"
      ]
    },
    "ts": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**/*.js"
      ]
    }
  },
  "lint-staged": {
    "*.{js,mjs,ts,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,md,scss,yaml}": "prettier --write"
  }
}
